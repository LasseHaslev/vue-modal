{
  "name": "vue-modal-browserify",
  "version": "0.8.16",
  "description": "Vue modal is a simple modal component for frontend framework vuejs",
  "main": "src/Components/Modal/Modal.js",
  "author": "Lasse S. Haslev <lasse@haslev.no>",
  "scripts": {
    "serve": "http-server -c 1 -a localhost",
    "dev": "npm-run-all --parallel watch-js watch-css serve",
    "build": "npm run build-js & npm run build-css",
    "build-js": "cross-env NODE_ENV=production browserify -t [ stringify --extensions [.html .hbs] ] src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "watch-js": "watch-run -p 'src/**' npm run browserify-hmr -t [ stringify --extensions [.html .hbs] ] -e src/main.js -o dist/build.js",
    "build-css": "node-sass --include-path scss src/styles/Modal.scss dist/styles/modal.css",
    "watch-css": "node-sass -w --include-path scss src/styles/Modal.scss dist/styles/modal.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LasseHaslev/vue-modal.git"
  },
  "keywords": [
    "modal",
    "popup",
    "vuejs"
  ],
  "license": "ISC",
  "dependencies": {
    "brfs": "^1.4.3",
    "vue": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "npm-run-all": "^1.6.0",
    "stringify": "^5.1.0",
    "uglify-js": "^2.5.0",
    "vueify": "^8.5.2",
    "watch-run": "^1.2.4",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "bugs": {
    "url": "https://github.com/LasseHaslev/vue-modal/issues"
  },
  "homepage": "https://github.com/LasseHaslev/vue-modal#readme"
}
