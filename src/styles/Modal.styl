.Modal, .Modal__backdrop, .Modal__scrollable
    position:fixed
    top:0
    right:0
    bottom:0
    left:0
    z-index: 99998
.Modal
    +e( scrollable )
        overflow:auto
    +e( backdrop )
        z-index: -1000
        background-color: black
        opacity: .725
    +e( content )
        width: 90%
        max-width: 730px
        margin: 3% auto
        // @extend .Card
        +e( close )
            padding: 0
            cursor: pointer
            background 0 0
            border 0
            -webkit-appearance: none
            
            float:right
            font-size:21px
            font-weight: 700
            line-height: 1
            color: black
            text-shadow 0 1px 0 white
            opacity: .2
            &:hover
                opacity: .5
